<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.co.hasaneljabir.moviereview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="id.co.hasaneljabir.moviereview.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="id.co.hasaneljabir.moviereview.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <service
            android:name=".feature.widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".feature.widget.FavoriteWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_widget_info" />
        </receiver>

        <receiver
            android:name=".feature.reminder.ReminderReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".feature.reminder.ReminderActivity" />
        <activity android:name=".feature.tvShow.TvShowFavActivity" />
        <activity android:name=".feature.movie.MovieFavActivity" />
        <activity android:name=".feature.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.movie.MovieDetailActivity" />
        <activity android:name=".feature.tvShow.TvShowDetailActivity" />

        <provider
            android:name=".entity.contentProvider.FavoriteMovieProvider"
            android:authorities="id.co.hasaneljabir.moviereview"
            android:exported="true"
            android:readPermission="id.co.hasaneljabir.moviereview.READ_DATABASE"
            android:writePermission="id.co.hasaneljabir.moviereview.WRITE_DATABASE" />
    </application>

</manifest>